<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/car_icon"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/car" />
    <TextView android:id="@+id/car_chepaihao"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:text="车牌号："
        android:layout_toRightOf="@id/car_icon"
        android:textSize="20sp"
        android:layout_alignTop="@id/car_icon"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
    <TextView android:id="@+id/tv_carlist_item_chepaihao"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/car_chepaihao"
        android:textSize="20sp"
        android:layout_alignTop="@id/car_chepaihao"
        android:gravity="center_vertical"
        android:layout_marginLeft="1dp" />
    <TextView android:id="@+id/tv_carlist_item_shenhejieguo"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_toRightOf="@id/tv_carlist_item_chepaihao"
        android:textSize="20sp"
        android:layout_alignTop="@id/tv_carlist_item_chepaihao"
        android:gravity="right|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
</RelativeLayout>