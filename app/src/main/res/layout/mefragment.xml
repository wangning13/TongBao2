<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/editinfo_layout"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/frameframe"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
            android:layout_height="100dp">

            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/ImageView_add"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/add_image_bg"/>
            <LinearLayout

                android:layout_marginLeft="100dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_name"
                    android:gravity="bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="丁丁枳枳"
                    android:textColor="#1F6EF2"    >
                </TextView>
                <TextView
                    android:id="@+id/text_tel"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="top"
                    android:textSize="15sp"
                    android:text="电话：18602514017"
                    android:textColor="#1F6EF2"    >
                </TextView>
            </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/arrowme"/>
        </RelativeLayout>





    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/frameframe"
        android:layout_width="fill_parent"
        android:layout_height="195dp"
        >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/wallet_layout"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp">

                    <ImageView

                            android:layout_margin="10dp"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/wallet"/>

                    <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:padding="20dp"
                            android:layout_marginLeft="60dp"
                            android:textSize="20sp"
                            android:textColor="#1F6EF2"
                            android:text="钱包" />


                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/arrowme"
                         />

    </RelativeLayout>
                </TableRow>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#1F6EF2"
                    />
                <TableRow
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/news_layout"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp">

                        <ImageView

                            android:layout_margin="10dp"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/news"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:textSize="20sp"
                            android:padding="20dp"
                            android:layout_marginLeft="60dp"
                            android:textColor="#1F6EF2"
                            android:text="消息" />


                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/arrowme"
                            />

                    </RelativeLayout>
                </TableRow>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#1F6EF2"
                    />
                <TableRow
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/help_layout"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp">

                        <ImageView

                            android:layout_margin="10dp"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/helpcenter"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:padding="20dp"
                            android:layout_marginLeft="60dp"
                            android:textSize="20sp"
                            android:textColor="#1F6EF2"
                            android:text="帮助中心" />


                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/arrowme"
                            />

                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
</LinearLayout>
</RelativeLayout>